@page
@using Yggdrasil.DbModels
@model Yggdrasil.Pages.Study.HomeworkModel
@{
}


@for (int i = 0; i < Model.Input.Count; i++)
{
    <h2>@Model.Input[i].Name</h2>

    @for (int j = 0; j < Model.Input[i].Homeworks.Count; j++)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Задание</th>
                    <th scope="col">Дедлайн</th>
                    <th scope="col">Сделано?</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Input[i].Homeworks[j].Description</td>
                    <td>@Model.Input[i].Homeworks[j].Deadline</td>
                    <td>
                        <form method="post">
                            @if (Model.Input[i].Homeworks[j].Finished)
                            {
                                <input class="form-check-input" type="checkbox" readonly="readonly" checked>
                            }
                            else
                            {
                                <input class="form-check-input" type="checkbox" readonly="readonly">
                            }

                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
        <form method="get">
            <input type="submit" class="btn primary-btn" asp-page="HomeworksUpdate" asp-route-id="@Model.Input[i].Homeworks[j].Id" asp-route-subjectname="@Model.Input[i].Name" value="Изменить"/>
        </form>
        <button class="btn primary-btn">Удалить</button>
    }


}
